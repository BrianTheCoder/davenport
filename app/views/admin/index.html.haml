#posts
  %table.tablesorter
    %thead
      %tr
        %th{:colspan => 2} Posted at
        %th Title
        %th Tags
        %th Action
    %tbody
      -@posts.each do |post|
        %tr
          %td.edit=link_to "edit", url(:edit_post, post.id)
          %td.published=post.published_at.strftime("%D %H:%m")
          %td.title=post.title
          %td.tags=post.tags.map{|t| link_to("##{t}")}.join(', ')
          %td.delete=delete_button(url(:admin_post,post))